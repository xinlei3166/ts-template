{
  "name": "ts-template",
  "version": "1.0.0",
  "description": "一个 typescript 项目模版",
  "repository": {
    "type": "git",
    "url": "https://github.com/xinlei3166/ts-template"
  },
  "keywords": [
    "typescript",
    "template"
  ],
  "bugs": {
    "url": "https://github.com/xinlei3166/ts-template/issues"
  },
  "homepage": "https://github.com/xinlei3166/ts-template#readme",
  "author": "君惜",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "unpkg": "dist/index.min.js",
  "scripts": {
    "test": "jest",
    "dev": "tsup src/index.ts --watch src",
    "build": "pnpm clean && run-p build:bundle build:umd",
    "build:bundle": "tsup src/index.ts --dts --format cjs,esm",
    "build:umd": "rollup -c scripts/rollup.config.js",
    "clean": "rm -rf dist",
    "lint": "eslint --fix --ext .js,.jsx,.ts,.tsx,.vue",
    "release": "yunque-release --skipBuild",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.12",
    "@types/node": "^14.14.39",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "@yunquejs/release": "^0.1.4",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "conventional-changelog-cli": "^2.1.1",
    "chalk": "^4.1.2",
    "jest": "^26.1.0",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.1.1",
    "tsup": "^4.11.1",
    "typescript": "^4.2.3",
    "yorkie": "^2.0.0",
    "rollup": "^2.22.1",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-typescript2": "^0.27.2",
    "@rollup/plugin-babel": "^5.1.0",
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@babel/core": "^7.10.5",
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/preset-env": "^7.10.4"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verify-commit.js"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "eslint --fix",
      "git add"
    ]
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
